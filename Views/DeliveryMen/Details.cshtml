@model RSWEBProject.ViewModels.DeliveryManPicture

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>DeliveryMan</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Profile picture:
        </dt>
        <dd class = "col-sm-10">
            <img src="~/profilePictures/@Model.deliveryMan.ProfilePicture"
                class="rounded-circle"
                height="40" width="40"
                asp-append-version="true" />
        </dd> 
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.deliveryMan.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.deliveryMan.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.deliveryMan.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.deliveryMan.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.deliveryMan.HireDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.deliveryMan.HireDate)
        </dd>
        
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.deliveryMan.Id">Edit</a>
    }
    |
    @if (User.Identity.IsAuthenticated && User.IsInRole("Delivery Man"))
    {
        <a asp-action="EditPicture" asp-route-id="@Model?.deliveryMan.Id">Edit Picture</a>
    }
    |
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a asp-action="Index">Back to List</a>
    }
    |
    @if (User.Identity.IsAuthenticated && User.IsInRole("Delivery Man"))
    {
        <a asp-controller="Restaurants" asp-action="ViewRestaurants" asp-route-id="@Model?.deliveryMan.Id">Check Restaurants</a>
    }
</div>
