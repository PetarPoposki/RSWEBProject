@model RSWEBProject.ViewModels.DeliveryManPicture

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DeliveryMan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPicture" enctype="multipart/form-data" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="deliveryMan.Id" />
            <div class="form-group"  style="display:none">
                <label asp-for="deliveryMan.FirstName" class="control-label"></label>
                <input asp-for="deliveryMan.FirstName" class="form-control" />
                <span asp-validation-for="deliveryMan.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="deliveryMan.LastName" class="control-label"></label>
                <input asp-for="deliveryMan.LastName" class="form-control" />
                <span asp-validation-for="deliveryMan.LastName" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="deliveryMan.HireDate" class="control-label"></label>
                <input asp-for="deliveryMan.HireDate" class="form-control" />
                <span asp-validation-for="deliveryMan.HireDate" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none" >
                <label asp-for="deliveryMan.ProfilePicture" class="control-label"></label>
                <input asp-for="deliveryMan.ProfilePicture" class="form-control" />
                <span asp-validation-for="deliveryMan.ProfilePicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfilePictureFile" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="ProfilePictureFile" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile"></label>
                </div>
                <span asp-validation-for="ProfilePictureFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details">Back to Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
